{
  "name": "server",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm src/main.ts | pnpm pino-pretty'",
    "build": "tsc && tsup --format esm src --minify",
    "preview": "node dist/main.js",
    "lint": "eslint src"
  },
  "tsup": {
    "noExternal": [
      "schema"
    ]
  },
  "dependencies": {
    "@vlcn.io/direct-connect-common": "^0.4.0",
    "@vlcn.io/direct-connect-nodejs": "^0.4.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "pino-http": "^8.3.3",
    "schema": "workspace:*",
    "tsup": "^7.1.0"
  },
  "devDependencies": {
    "@swc/core": "^1.3.65",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "nodemon": "^2.0.22",
    "pino-pretty": "^10.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
